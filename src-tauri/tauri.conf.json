{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "OverBuddy"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": ["msi", "updater"],
      "identifier": "com.overbuddy.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.ico"
      ],
      "shortDescription": "OverBuddy",
      "longDescription": "Elevate your Overwatchâ„¢ 2 experience by customizing your in-game menu background with ease. Browse through all available backgrounds and select your favourite. No need to guess the lobby code or mess around with configuration anymore!",
      "category": "Utility",
      "windows": {
        "certificateThumbprint": null,
        "webviewInstallMode": {
          "type": "embedBootstrapper",
          "silent": true
        },
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "dialogImagePath": "icons/WindowsDialogImage.bmp",
          "bannerPath": "icons/WindowsBanner.bmp"
        }
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "OverBuddy",
        "label": "main",
        "center": true,
        "focus": true,
        "fullscreen": false,
        "alwaysOnTop": false,
        "resizable": false,
        "width": 1024,
        "height": 768,
        "visible": false
      }
    ],
    "updater": {
      "active": true,
      "dialog": true,
      "windows": {
        "installMode": "passive"
      },
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEI2OUE5NTMyM0M5ODUzNwpSV1EzaGNralU2bHBDOXM0TzcxSFU3aG9CZlVnV3Znc3lWZ0xianFuT0d4WGJBQklGclNabWhZcQo=",
      "endpoints": [
        "https://github.com/KirillTregubov/OverBuddy/releases/latest/download/latest.json"
      ]
    }
  }
}
